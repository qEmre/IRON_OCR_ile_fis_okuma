@model Document

<div class="container" style="margin-top: 50px;">
    <div class="row">

        <div class="col-md-6">
            <h3>Fiş Fotoğrafı</h3>
            <img src="@Model.ResimUrl" alt="Belge Resmi" class="img-fluid" style="max-height: 500px; width: auto;" />
        </div>

        <div class="col-md-6">
            <h3>Fiş Detayı</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Bilgiler</th>
                        <th>İçerik</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Firma Adı</td>
                        <td>@Model.FirmaAdi</td>
                    </tr>
                    <tr>
                        <td>Adres</td>
                        <td>@Model.Adres</td>
                    </tr>
                    <tr>
                        <td>Vergi No</td>
                        <td>@Model.VergiNo</td>
                    </tr>
                    <tr>
                        <td>Tarih</td>
                        <td>@Model.Tarih.ToString("d")</td>
                    </tr>
                    <tr>
                        <td>Fiş No</td>
                        <td>@Model.FisNo</td>
                    </tr>
                    <tr>
                        <td>KDV</td>
                        <td>@Model.KDV</td>
                    </tr>
                    <tr>
                        <td>Toplam</td>
                        <td>@Model.Toplam</td>
                    </tr>
                    <tr>
                        <td>Ürün Bilgisi</td>
                        <td>
                            <ul>
                                @foreach (var urun in Model.DocumentContents)
                                {
                                    <li>@urun.UrunBilgisi - @urun.UrunFiyati</li>
                                }
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <a href="/OCR/documentList" class="btn btn-info" style="width: 175px; margin-left: 1125px; margin-top: 20px;">
            Geri
        </a>
    </div>
</div>